config BACKPORT_ATH11K
	tristate "Qualcomm Technologies 802.11ax chipset support"
	depends on !ATH11K
	depends on BACKPORT_MAC80211 && HAS_DMA
	depends on REMOTEPROC
	depends on CRYPTO_MICHAEL_MIC
	depends on ARCH_QCOM || COMPILE_TEST
	select BACKPORT_ATH_COMMON
	select QCOM_QMI_HELPERS
	help
	  This module adds support for Qualcomm Technologies 802.11ax family of
	  chipsets.

	  If you choose to build a module, it'll be called ath11k.

config BACKPORT_ATH11K_DEBUG
	bool "QCA ath11k debugging"
	depends on !ATH11K_DEBUG
	depends on BACKPORT_ATH11K
	help
	  Enables debug support

	  If unsure, say Y to make it easier to debug problems.

config BACKPORT_ATH11K_DEBUGFS
	bool "QCA ath11k debugfs support"
	depends on !ATH11K_DEBUGFS
	depends on ATH11K && DEBUG_FS && BACKPORT_MAC80211_DEBUGFS
	help
	  Enable ath11k debugfs support

	  If unsure, say Y to make it easier to debug problems.

config BACKPORT_ATH11K_TRACING
	bool "ath11k tracing support"
	depends on !ATH11K_TRACING
	depends on BACKPORT_ATH11K && EVENT_TRACING
	help
	  Select this to use ath11k tracing infrastructure.
